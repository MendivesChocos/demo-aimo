{
    "compilerOptions": {
        "sourceMap": true,
        "target": "es5",
        "jsx": "react",
        "baseUrl": ".",
        "esModuleInterop": true,
        "paths": {
            "@app/*": [
                "src/*"
            ]
        },
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "es2015",
            "es2015.promise"
        ]
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/*.spec.tsx"
    ],
    "awesomeTypescriptLoaderOptions": {
        "transpileOnly": true
    }
}